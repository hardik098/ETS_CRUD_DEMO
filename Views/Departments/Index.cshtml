@model IEnumerable<ETS_CRUD_DEMO.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.value.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.value.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.value.DepartmentId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.value.DepartmentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.value.DepartmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
